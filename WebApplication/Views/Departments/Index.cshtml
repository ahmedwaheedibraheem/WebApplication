@model List<WebApplication.Models.Entities.Department>
@{
    ViewBag.Title = "Departments";
}


<h2>Departments</h2>

<br />
<br />

@if (Request.IsAuthenticated)
{
    <a href="/departments/Add" class="btn btn-primary">
        <span class="glyphicon glyphicon-plus"></span>Add new department
    </a>
}
<br />
<br />

@if (Model == null || Model.Count == 0)
{
    <h4>No departments found</h4>
}
else
{
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (WebApplication.Models.Entities.Department dept in Model)
            {
                <tr id="@dept.Id">
                    <td>@dept.Name</td>
                    <td>
                        @Html.Partial("_PartialControls", dept.Id)
                    </td>
                </tr>
            }

        </tbody>
    </table>
}
@section scripts {
    <script src="~/Scripts/SiteScripts/ConfirmDeleteDept.js"></script>
}


